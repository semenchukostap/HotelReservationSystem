        <nav class="navbar navbar-expand-sm navbar-light bg-light">
            <a class="navbar-brand" href="/">MyApp</a>
        </nav>
    </header>
    <div class="container">
        @RenderBody()
    </div>
    <footer class="text-muted">
        <div class="container">
            <p>&copy; 2023 - My ASP.NET Core Application</p>
        </div>
    </footer>
    <script src="~/js/site.js"></script>
